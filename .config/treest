# bind 'x R' source ~/.config/treestrc
bind <A-q> quit

sort extension dirs-first
filter add dotfiles
bind <C-h> filter toggle dotfiles
bind <C-l> reload

var step 15
bind <C-u> expand rep '{step} prev-node'
bind <C-d> expand rep '{step} next-node'

bind o expand prompt-init 'mkdir\  {.relative} shell mkdir'
bind a expand prompt-init '-> {.relative} shell mv {.relative}'
bind d expand prompt-init 'rm\  "{selection?selection.relative:.relative}" shell rm'
bind D expand prompt-init 'rm!\  "{selection?selection.relative:.relative}" shell rm -rf'

bind e expand shell-wait 'hx {selection?selection:}'
# bind e expand shell-wait 'sh -c "$EDITOR {}"'

bind f expand shell 'file {.relative}'
# bind F expand shell 'head {}' # FIXME: this trying to parse fn key

# bind | expand prompt '| shell sh -c "<{} {|}"'
# bind | expand prompt-init '| "<{} " shell sh -c'
# bind | expand prompt '| shell {reply} {}

bind 'x x' expand shell '{}'
bind + expand shell 'chmod +x {}'
bind - expand shell 'chmod -x {}'

bind 'x o' expand shell-wait 'rifle {selection?selection:}'

bind S expand seq '"echo cd {}" quit'
